# AI Animation Platform - Environment Configuration Template
# Copy this file to .env and update with your values

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# Server Settings
API_HOST=0.0.0.0
API_PORT=8000

# Upload Limits
UPLOAD_MAX_SIZE=500MB
MAX_IMAGES_PER_PROJECT=100
MAX_AUDIO_SIZE=100MB

# Processing Settings
PROCESSING_THREADS=4
MAX_CONCURRENT_JOBS=5

# Video Settings
MAX_VIDEO_DURATION=300
DEFAULT_FPS=30
DEFAULT_RESOLUTION=1080p

# ============================================================================
# AI/ML CONFIGURATION (Optional)
# ============================================================================

# GPU Settings
USE_GPU=false
CUDA_VISIBLE_DEVICES=0

# Model Cache
MODEL_CACHE_DIR=./models
HUGGINGFACE_CACHE=./models/huggingface

# Stable Diffusion (Optional - for AI enhancement features)
# DIFFUSION_MODEL=runwayml/stable-diffusion-v1-5
# ENABLE_AI_ENHANCEMENT=false

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================

# Local Storage Paths
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
TEMP_DIR=temp

# Auto-cleanup Settings
AUTO_DELETE_PROJECTS_AFTER_HOURS=24
AUTO_DELETE_OUTPUTS_AFTER_HOURS=48

# ============================================================================
# SECURITY (Production Only)
# ============================================================================

# CORS Origins (comma-separated)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Keys (for production authentication)
# API_KEY_ENABLED=false
# API_SECRET_KEY=your-secret-key-here

# Rate Limiting
# RATE_LIMIT_ENABLED=false
# RATE_LIMIT_PER_MINUTE=10

# ============================================================================
# DATABASE (Optional - for multi-user support)
# ============================================================================

# SQLite (default)
# DATABASE_URL=sqlite:///./projects.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost/aianimation

# Redis (for caching and job queue)
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# API Endpoints
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Features Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SHARING=true

# ============================================================================
# OPTIONAL INTEGRATIONS
# ============================================================================

# Email Notifications (for job completion)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@aianimation.com

# Cloud Storage (S3-compatible)
# USE_CLOUD_STORAGE=false
# S3_BUCKET=ai-animation-outputs
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

# Analytics
# ANALYTICS_ENABLED=false
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Development Mode
DEBUG=true
RELOAD=true

# Disable in production
ENABLE_DOCS=true
ENABLE_ADMIN_PANEL=true
